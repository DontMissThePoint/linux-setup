# #{ gitPullPush()

gitPullPush() {

	branch=$(git branch | grep \* | sed 's/\*\s\([a-zA-Z0-9]*\)/\1/')

	if [ $# -eq 0 ]; then
		git pull origin "$branch"
		git push origin "$branch"
	else
		git pull "$1" "$branch"
		git push "$1" "$branch"
	fi
}

