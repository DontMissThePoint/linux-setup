# #{ getVideoThumbnail()

getVideoThumbnail() {

	if [ $# -eq 0 ]; then
		echo "did not get input"
		exit 1
	elif [ $# -eq 1 ]; then
		echo "gettin the first frame"
		file="$1"
		frame="00:00:01"
	elif [ $# -eq 2 ]; then
		file="$1"
		frame="$2"
	fi

	output="${file%.*}_thumbnail.jpg"
	ffmpeg -i "$file" -ss "$frame" -vframes 1 "$output"
}

