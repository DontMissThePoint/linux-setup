slack() {

  SLACK_BIN=`which slack-term`

  if [ -z $1 ]
  then
    SLACK_NAME=$(echo "mrs
    eagle" | rofi -i -dmenu -no-custom -p "Select slack")
  else
    SLACK_NAME=${1}
  fi

  mkdir -p ~/notes/slack

  case ${SLACK_NAME} in
    mrs)
      SLACK_CFG=~/notes/slack/mrsworkspace
      ;;
    eagle)
      SLACK_CFG=~/notes/slack/drone-eagleone
      ;;
  esac

  $SLACK_BIN -config $SLACK_CFG
}

