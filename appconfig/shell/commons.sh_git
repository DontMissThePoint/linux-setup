# #{ remove_duplicates_from_path()
remove_duplicates_from_path() {
    OLD_IFS=$IFS
    IFS=:
    NEWPATH=
    unset EXISTS
    declare -A EXISTS
    for p in $PATH; do
        if [ -z ${EXISTS[$p]} ]; then
            NEWPATH=${NEWPATH:+$NEWPATH:}$p
            EXISTS[$p]=yes
        fi
    done
    IFS=$OLD_IFS
    PATH=$NEWPATH
}

